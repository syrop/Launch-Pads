        <action android:id="@+id/action_mainFragment_to_mapFragment" app:destination="@id/mapFragment"/>
    </fragment>

    <fragment
            android:id="@+id/mapFragment"
            android:name="pl.org.seva.spacex.launchpad.MapFragment"
            android:label="@string/map_label"
