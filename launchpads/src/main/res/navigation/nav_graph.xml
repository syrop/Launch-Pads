            android:id="@+id/nav_graph"
            app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="pl.org.seva.spacex.launchpad.LaunchPadsFragment"
        tools:layout="@layout/fr_launch_pads"
